<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/menu_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="{icon-back}"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="openDrawerLayout"/>

        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="公交圈"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearlayout_news_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/tableLayout_travel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:paddingTop="5dip" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dip" >

                        <TextView
                            android:id="@+id/tv_subway"
                            android:layout_width="fill_parent"
                            android:layout_height="117dp"
                            android:background="#FF3366"
                            android:drawableBottom="@drawable/gongjiaochuxingwuyou"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="地铁"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawable="@drawable/shop_buy" />

                        <TextView
                            android:id="@+id/tv_netbar"
                            android:layout_width="fill_parent"
                            android:layout_height="116dp"
                            android:layout_marginTop="10dip"
                            android:background="#FF6600"
                            android:drawableBottom="@drawable/zhandianshoucang"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="网吧"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                        <TextView
                            android:id="@+id/tv_KTV"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="10dip"
                            android:layout_weight="1"
                            android:background="#009933"
                            android:drawableBottom="@drawable/shop_girl"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="KTV"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                        <TextView
                            android:id="@+id/tv_oil"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="10dip"
                            android:layout_weight="1"
                            android:background="#913EB0"
                            android:drawableBottom="@drawable/tixingzhandian"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="加油站"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />
                    </LinearLayout>
                    <!-- 2 -->

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dip" >

                        <TextView
                            android:id="@+id/tv_hotel"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="#CC33FF"
                            android:drawableBottom="@drawable/dianying"
                            android:gravity="top"
                            android:padding="10dip"
                            android:text="酒店"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                        <TextView
                            android:id="@+id/tv_restaurant"
                            android:layout_width="fill_parent"
                            android:layout_height="109dp"
                            android:layout_marginTop="10dip"
                            android:background="#00CCFF"
                            android:drawableBottom="@drawable/meishi"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="美食小吃"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                        <TextView
                            android:id="@+id/tv_ATM"
                            android:layout_width="fill_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="10dip"
                            android:background="#99CC00"
                            android:drawableBottom="@drawable/atm"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="银行ATM"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                        <TextView
                            android:id="@+id/tv_supermarket"
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dip"
                            android:background="#016Cf0"
                            android:drawableBottom="@drawable/chaoshi"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="超市"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>