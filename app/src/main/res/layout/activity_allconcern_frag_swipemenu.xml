<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="#eeeeee" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee" >

        <com.bnrc.bnrcsdk.ui.pullloadmenulistview.PullLoadMenuListView
            android:id="@+id/explistview_all_concern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.0dip"
            android:cacheColorHint="#00000000"
            android:childDivider="@color/white"
            android:divider="@color/white"
            android:dividerHeight="0dp"
            android:drawSelectorOnTop="false"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="true"
            android:groupIndicator="@null"
            android:scrollbars="vertical"
            android:scrollingCache="true" />

        <RelativeLayout
            android:id="@+id/rLayout_all_concern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_all_concern"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:alpha="0.6"
                android:src="@drawable/icon_no_collection" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_all_concern"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:hint="暂时没有收藏线路"
                android:textSize="18sp"
                android:typeface="serif" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>